<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="PropertyRowTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Style="{StaticResource LabelTextStyle}" Text="{Binding Label}"/>
            <TextBlock Grid.Column="1" Style="{StaticResource ValueTextStyle}" Text="{Binding Value}"/>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="PropertyTcpRowTemplate">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Style="{StaticResource LabelTextStyle}" Text="{Binding LocalAddress, StringFormat='Локальный адрес: {0}'}"/>
            <TextBlock Grid.Row="1" Style="{StaticResource ValueTextStyle}" Text="{Binding LocalPort, StringFormat='Порт (local): {0}'}"/>
            <TextBlock Grid.Row="2" Style="{StaticResource LabelTextStyle}" Text="{Binding RemoteAddress, StringFormat='Удаленный адрес: {0}'}"/>
            <TextBlock Grid.Row="3" Style="{StaticResource ValueTextStyle}" Text="{Binding RemotePort, StringFormat='Порт (remote): {0}'}"/>
            <TextBlock Grid.Row="4" Style="{StaticResource ValueTextStyle}" Text="{Binding StateTcpConnection, StringFormat='Состояние соединения: {0}'}"/>
        </Grid>
    </DataTemplate>

</ResourceDictionary>