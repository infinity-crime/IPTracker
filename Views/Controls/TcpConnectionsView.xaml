<UserControl x:Class="IPTracker.Views.Controls.TcpConnectionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IPTracker.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
               Text="Информация об активных сетевых TCP соединениях" 
               Style="{StaticResource SectionHeaderStyle}"/>

        <ScrollViewer Grid.Row="1" 
                  VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding TcpConnectionsCollection}" 
                      ItemTemplate="{StaticResource PropertyTcpRowTemplate}"/>
        </ScrollViewer>

        <Border Grid.Row="2" 
            Background="AliceBlue" 
            Padding="10" 
            Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right">
                <Button Content="Обновить" 
                    Command="{Binding UpdateCommand}" 
                    Style="{StaticResource PrimaryButton}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
